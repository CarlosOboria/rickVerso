{
    "type": "AdaptiveCard",
    "speak": "3 minute energy flow with kayo video",
    "version": "1.5",
    "body": [
        {
            "type": "Image",
            "url": "https://th.bing.com/th/id/OIP.bYzI7_jHo7RJvEq4LHHGfQHaEK?rs=1&pid=ImgDetMain",
            "altText": "3 Minute Energy Flow with Kayo Video"
        },
        {
            "type": "TextBlock",
            "text": "En busca o captura  por OBORIA",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://rickandmortyapi.com/api/character/avatar/${id}.jpeg",
                            "width": "80px",
                            "height": "80px",
                            "style": "Person",
                            "altText": "Avatar del personaje"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "Medium",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${name}",
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Ficha del sujeto:\n",
            "maxLines": 0,
            "style": "heading",
            "horizontalAlignment": "Center",
            "fontType": "Monospace",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Especie: ${species}",
            "wrap": true,
            "separator": true,
            "fontType": "Monospace"
        },
        {
            "type": "TextBlock",
            "text": "GÃ©nero: ${gender}",
            "wrap": true,
            "spacing": "Small",
            "fontType": "Monospace"
        },
        {
            "type": "TextBlock",
            "text": "Estado: ${status}",
            "wrap": true,
            "spacing": "Small",
            "fontType": "Monospace"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Encontrado",
                    "url": "https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExeWdnenh3bml5MG1sYmxobnphMWIxaXNxbWZyMmkzeGw2ZnhkZnh6MiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/Y4avwKekkjNgg9fzaP/giphy.webp"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Remind me",
                    "url": "https://www.microsoft.com/",
                    "iconUrl": "icon:AlertUrgent"
                }
            ]
        }
    ],
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json"
}